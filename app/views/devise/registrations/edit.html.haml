= devise_error_messages!
.container
  %h3 Edit #{current_user.name.humanize}
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
    %fieldset.form-group
      = f.label :name
      = f.text_field :name, autofocus: true, class: "form-control", placeholder: "Your full name", required: true
    %fieldset.form-group
      = f.label :email
      = f.email_field :email, class: "form-control"
    %fieldset.form-group
      = f.label :password
      = f.password_field :password, :autocomplete => "off", class: "form-control"
      %small.text-muted
        Leave blank if you don't want to change it
    %fieldset.form-group
      = f.label :password_confirmation
      = f.password_field :password_confirmation, class: "form-control"
    %fieldset.form-group
      = f.label :birthdate
      = f.date_field :birthdate, class: "form-control", placeholder: "Your birthdate", required: true
      %small.text-muted
        Not shown publicly, only used for the < 25 age ranking
    %fieldset.form-group
      = f.label :sex
      = f.collection_select :sex, User.sexes.keys, :to_s, :titlecase, {}, class: 'form-control'
    %fieldset.form-group
      = f.label :location
      = f.collection_select :location, User.locations.keys, :to_s, :titlecase, {}, class: 'form-control'
    %fieldset.form-group
      = f.label :employee_number
      = f.text_field :employee_number, class: "form-control", placeholder: "Your employee number"
      %small.text-muted
        This can be found on your monthly payment strip. Leave empty if you're not salaried by MGX Belgium directly.
    %fieldset.form-group
      = f.label :current_password
      = f.password_field :current_password, class: "form-control"
      %small.text-muted
        We need your current password to confirm your changes
    = f.submit "Update", class: "btn btn-primary"

  %hr
  = link_to 'Back', :back
