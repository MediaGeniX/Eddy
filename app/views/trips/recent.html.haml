.container
  %h3 Trips
  #table-trips.table.table-striped
    .thead
      .tr
        %span.th Date
        %span.th Alias
        %span.th Distance (km)
    .tbody
      = render partial: 'trip', collection: @trips, locals: { render_actions: false }

  = will_paginate @trips, list_classes: %w(pagination justify-content-center)
