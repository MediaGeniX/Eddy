.container
  %h3 Scoreboard
  %p
    .card-deck-wrapper
      .card-deck
        .card
          .card-block
            %h4.card-title Yellow Jersey
            %h6.card-subtitle.text-muted
              Most total distance
          .card-block
            .card-title
              %table.table.table-sm
                %thead
                  %tr
                    %th #
                    %th Name
                    %th.text-xs-right Distance
                %tbody
                  - @yellow_jersey.each_with_index do |(user, meter), i|
                    %tr
                      %th{scope: 'row'}= i+1
                      %td= user.name
                      %td.text-xs-right= pretty_number(meter_to_kilometer(meter))
        .card
          .card-block
            %h4.card-title Polka Dot Jersey
            %h6.card-subtitle.text-muted
              Most days biked
          .card-block
            .card-title
