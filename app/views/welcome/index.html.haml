.jumbotron
  .container
    .row
      .col-lg-4
        = image_tag 'remco_eddy.jpg'
      .col-lg-4
        %h5 Temporarily rebranded in support of Remco
        %h1.display-3 Remco!
        %p Welcome to Remco, your personal MgX 1000km challenge tracker service.
        - if user_signed_in?
          = link_to "#{fa_icon :plus} Add new trip".html_safe, user_trips_path(current_user), class: 'btn btn-lg btn-outline-primary'
        - else
          = link_to "#{fa_icon 'sign-in'} Sign in".html_safe, new_user_session_path, class: 'btn btn-lg btn-outline-primary'
          = link_to "#{fa_icon 'user-plus'} Sign up".html_safe, new_user_registration_path, class: 'btn btn-lg btn-outline-primary'
      .col-lg-4
        = yellow_jersey_card(@yellow_jersey, 5)



.container
  .row
    .col-lg-3
      %h4 1. Sign up
      %p
        Create an account to manage your routes, ridden trips and progress.
      %p.d-lg-none
        = link_to 'Sign up »', new_user_registration_path, class: 'btn btn-light'
    .col-lg-3
      %h4 2. Set up routes
      %p
        Configure your favorite routes for quick & easy trip recording.
      %p.d-lg-none
        = link_to 'Routes »', if user_signed_in? then user_routes_path(current_user) else new_user_session_path end, class: 'btn btn-light'
    .col-lg-3
      %h4 3. Record a trip
      %p
        Record trips to make your kilometers count!
      %p.d-lg-none
        = link_to 'Trips »', if user_signed_in? then user_trips_path(current_user) else new_user_session_path end, class: 'btn btn-light'
    .col-lg-3
      %h4 4. Check the rankings
      %p
        An overview of the current leading bikers in every category.
      %p.d-lg-none
        = link_to 'Scoreboard »', scoreboard_path, class: 'btn btn-light'
  .row.d-none.d-lg-flex
    .col-3
      %p
        = link_to 'Sign up »', new_user_registration_path, class: 'btn btn-light'
    .col-3
      %p
        = link_to 'Routes »', if user_signed_in? then user_routes_path(current_user) else new_user_session_path end, class: 'btn btn-light'
    .col-3
      %p
        = link_to 'Trips »', if user_signed_in? then user_trips_path(current_user) else new_user_session_path end, class: 'btn btn-light'
    .col-3
      %p
        = link_to 'Scoreboard »', scoreboard_path, class: 'btn btn-light'
